@model WebFood.Models.BanAn

@{
    ViewData["Title"] = "Sửa thông tin bàn ăn";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Sửa thông tin bàn ăn</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SuaBanAn" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="BanAnId" />
                        
                        <div class="mb-3">
                            <label asp-for="TenBan" class="form-label">Tên bàn</label>
                            <input asp-for="TenBan" class="form-control" />
                            <span asp-validation-for="TenBan" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="SoLuongChoNgoi" class="form-label">Số lượng chỗ ngồi</label>
                            <input asp-for="SoLuongChoNgoi" class="form-control" type="number" min="1" max="20" />
                            <span asp-validation-for="SoLuongChoNgoi" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="DaDat" class="form-check-input" />
                                <label asp-for="DaDat" class="form-check-label">Đã đặt</label>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label">Mô tả</label>
                            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="QuanLyBanAn" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 