@model WebFood.Models.SanPham
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">Xác nhận xóa</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5>Bạn có chắc chắn muốn xóa sản phẩm này?</h5>
                <p>Việc xóa sẽ ảnh hưởng đến các đơn hàng đã đặt.</p>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="@Model.HinhAnh" alt="@Model.Ten" class="img-fluid mb-3" style="max-height: 200px;" />
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Tên sản phẩm:</dt>
                        <dd class="col-sm-9">@Model.Ten</dd>
                        
                        <dt class="col-sm-3">Giá:</dt>
                        <dd class="col-sm-9">@Model.Gia.ToString("N0") VNĐ</dd>
                        
                        <dt class="col-sm-3">Danh mục:</dt>
                        <dd class="col-sm-9">@(Model.DanhMuc?.Ten ?? "Không có danh mục")</dd>
                        
                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.MoTa) ? "Không có mô tả" : Model.MoTa)</dd>
                        
                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            @if (Model.ConHang)
                            {
                                <span class="badge bg-success">Còn hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Hết hàng</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="XoaSanPham" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="QuanLySanPham" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div> 