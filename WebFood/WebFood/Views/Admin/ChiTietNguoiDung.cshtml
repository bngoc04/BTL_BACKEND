@model WebFood.Controllers.UserViewModel
@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold">Thông tin người dùng</h6>
            <a asp-action="ChinhSuaVaiTro" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                <i class="bi bi-pencil"></i> Phân quyền
            </a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên đăng nhập:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>
                
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">Họ tên:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.HoTen) ? "Chưa cập nhật" : Model.HoTen)</dd>
                
                <dt class="col-sm-3">Số điện thoại:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.SoDienThoai) ? "Chưa cập nhật" : Model.SoDienThoai)</dd>
                
                <dt class="col-sm-3">Địa chỉ:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.DiaChi) ? "Chưa cập nhật" : Model.DiaChi)</dd>
                
                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@Model.NgayTao.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                
                <dt class="col-sm-3">Vai trò:</dt>
                <dd class="col-sm-9">
                    @if (Model.Roles != null && Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-primary me-1">@role</span>
                        }
                    }
                    else
                    {
                        <span>Không có vai trò</span>
                    }
                </dd>
            </dl>
            
            <div class="mt-3">
                <a asp-action="QuanLyNguoiDung" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div> 