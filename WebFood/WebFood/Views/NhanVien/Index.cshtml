@{
    ViewData["Title"] = "Trang Nhân Viên";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 fw-bold text-center">Quản Lý Quán Ăn Bé Ngọc</h1>
            <p class="lead text-center">Hệ thống quản lý đặt món và hóa đơn</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-table fs-1 text-primary"></i>
                    </div>
                    <h2 class="card-title">Quản Lý Bàn</h2>
                    <p class="card-text">Xem danh sách bàn, đặt món và thanh toán</p>
                    <a asp-controller="NhanVien" asp-action="DanhSachBan" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Xem Danh Sách Bàn
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-receipt fs-1 text-primary"></i>
                    </div>
                    <h2 class="card-title">Quản Lý Hóa Đơn</h2>
                    <p class="card-text">Xem danh sách hóa đơn đã thanh toán</p>
                    <a asp-controller="NhanVien" asp-action="DanhSachHoaDon" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Xem Danh Sách Hóa Đơn
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 