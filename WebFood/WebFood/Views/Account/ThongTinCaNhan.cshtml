@model WebFood.Models.ViewModels.ThongTinCaNhanViewModel

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4 border-0 shadow hover-grow">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i> Tài khoản</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Account" asp-action="ThongTinCaNhan" class="list-group-item list-group-item-action active">
                        <i class="bi bi-person-circle me-2"></i> Thông tin cá nhân
                    </a>
                    <a asp-controller="Account" asp-action="ChinhSuaThongTin" class="list-group-item list-group-item-action">
                        <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa thông tin
                    </a>
                    <a asp-controller="Account" asp-action="DoiMatKhau" class="list-group-item list-group-item-action">
                        <i class="bi bi-key me-2"></i> Đổi mật khẩu
                    </a>
                    @if (User.IsInRole("KhachHang"))
                    {
                        <a asp-controller="DonHang" asp-action="LichSuDonHang" class="list-group-item list-group-item-action">
                            <i class="bi bi-clock-history me-2"></i> Lịch sử đơn hàng
                        </a>
                        <a asp-controller="DatBan" asp-action="LichSuDatBan" class="list-group-item list-group-item-action">
                            <i class="bi bi-calendar-check me-2"></i> Lịch sử đặt bàn
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card border-0 shadow hover-grow">
                <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-vcard me-2"></i> Thông tin cá nhân</h5>
                    <a asp-controller="Account" asp-action="ChinhSuaThongTin" class="btn btn-light btn-sm animate__animated animate__pulse animate__infinite animate__slower">
                        <i class="bi bi-pencil"></i> Chỉnh sửa
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="avatar-placeholder bg-primary-light rounded-circle d-flex align-items-center justify-content-center mb-3 animate__animated animate__pulse animate__infinite animate__slow" style="width: 150px; height: 150px; margin: 0 auto;">
                                <i class="bi bi-person-circle text-primary" style="font-size: 5rem;"></i>
                            </div>
                            <h5 class="fw-bold">@Model.HoTen</h5>
                            <span class="badge bg-primary">@Model.VaiTro</span>
                            <div class="mt-3">
                                <p class="mb-1"><i class="bi bi-envelope me-2"></i> @Model.Email</p>
                                <p class="mb-1"><i class="bi bi-telephone me-2"></i> @(Model.SoDienThoai ?? "Chưa cập nhật")</p>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-4 border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold mb-3"><i class="bi bi-info-circle me-2"></i> Thông tin chi tiết</h5>
                                    <dl class="row">
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.UserName)</dt>
                                        <dd class="col-sm-8 fw-semibold">@Model.UserName</dd>
                                        
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Email)</dt>
                                        <dd class="col-sm-8 fw-semibold">@Model.Email</dd>
                                        
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.HoTen)</dt>
                                        <dd class="col-sm-8 fw-semibold">@(Model.HoTen ?? "Chưa cập nhật")</dd>
                                        
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.DiaChi)</dt>
                                        <dd class="col-sm-8 fw-semibold">@(Model.DiaChi ?? "Chưa cập nhật")</dd>
                                        
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.SoDienThoai)</dt>
                                        <dd class="col-sm-8 fw-semibold">@(Model.SoDienThoai ?? "Chưa cập nhật")</dd>
                                        
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.NgayTao)</dt>
                                        <dd class="col-sm-8 fw-semibold">@Model.NgayTao.ToString("dd/MM/yyyy")</dd>
                                        
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.VaiTro)</dt>
                                        <dd class="col-sm-8 fw-semibold">@Model.VaiTro</dd>
                                    </dl>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-controller="Account" asp-action="ChinhSuaThongTin" class="btn btn-primary">
                                    <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa thông tin
                                </a>
                                <a asp-controller="Account" asp-action="DoiMatKhau" class="btn btn-outline-primary">
                                    <i class="bi bi-key me-2"></i> Đổi mật khẩu
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add hover effect to buttons
            $('.btn').addClass('hover-grow');
        });
    </script>
} 