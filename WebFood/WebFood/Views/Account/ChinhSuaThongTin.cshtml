@model WebFood.Models.ViewModels.ChinhSuaThongTinViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
}

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4 border-0 shadow hover-grow">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i> Tài khoản</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Account" asp-action="ThongTinCaNhan" class="list-group-item list-group-item-action">
                        <i class="bi bi-person-circle me-2"></i> Thông tin cá nhân
                    </a>
                    <a asp-controller="Account" asp-action="ChinhSuaThongTin" class="list-group-item list-group-item-action active">
                        <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa thông tin
                    </a>
                    <a asp-controller="Account" asp-action="DoiMatKhau" class="list-group-item list-group-item-action">
                        <i class="bi bi-key me-2"></i> Đổi mật khẩu
                    </a>
                    @if (User.IsInRole("KhachHang"))
                    {
                        <a asp-controller="DonHang" asp-action="LichSuDonHang" class="list-group-item list-group-item-action">
                            <i class="bi bi-clock-history me-2"></i> Lịch sử đơn hàng
                        </a>
                        <a asp-controller="DatBan" asp-action="LichSuDatBan" class="list-group-item list-group-item-action">
                            <i class="bi bi-calendar-check me-2"></i> Lịch sử đặt bàn
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card border-0 shadow hover-grow">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Chỉnh sửa thông tin cá nhân</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="avatar-placeholder bg-primary-light rounded-circle d-flex align-items-center justify-content-center mb-3 animate__animated animate__pulse animate__infinite animate__slow" style="width: 150px; height: 150px; margin: 0 auto;">
                                <i class="bi bi-person-circle text-primary" style="font-size: 5rem;"></i>
                            </div>
                            <div class="mt-3">
                                <h6 class="fw-bold">Cập nhật thông tin</h6>
                                <p class="text-muted small">Vui lòng điền đầy đủ thông tin cá nhân của bạn</p>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <form asp-action="ChinhSuaThongTin" method="post" class="animate__animated animate__fadeIn">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="mb-4">
                                    <label asp-for="HoTen" class="form-label fw-semibold">
                                        <i class="bi bi-person me-2 text-primary"></i>Họ tên
                                    </label>
                                    <input asp-for="HoTen" class="form-control form-control-lg" placeholder="Nhập họ tên của bạn" />
                                    <span asp-validation-for="HoTen" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-4">
                                    <label asp-for="DiaChi" class="form-label fw-semibold">
                                        <i class="bi bi-geo-alt me-2 text-primary"></i>Địa chỉ
                                    </label>
                                    <textarea asp-for="DiaChi" class="form-control" rows="3" placeholder="Nhập địa chỉ của bạn"></textarea>
                                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-4">
                                    <label asp-for="SoDienThoai" class="form-label fw-semibold">
                                        <i class="bi bi-telephone me-2 text-primary"></i>Số điện thoại
                                    </label>
                                    <input asp-for="SoDienThoai" class="form-control form-control-lg" placeholder="Nhập số điện thoại của bạn" />
                                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                </div>
                                
                                <div class="d-flex justify-content-between mt-4">
                                    <a asp-action="ThongTinCaNhan" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left me-2"></i> Quay lại
                                    </a>
                                    <button type="submit" class="btn btn-primary animate__animated animate__pulse animate__infinite animate__slower">
                                        <i class="bi bi-save me-2"></i> Lưu thay đổi
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Add hover effect to buttons
            $('.btn').addClass('hover-grow');
            
            // Add focus effect to form controls
            $('.form-control').focus(function() {
                $(this).parent().addClass('animate__animated animate__pulse');
            }).blur(function() {
                $(this).parent().removeClass('animate__animated animate__pulse');
            });
        });
    </script>
} 