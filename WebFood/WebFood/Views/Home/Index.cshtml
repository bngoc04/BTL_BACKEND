        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="container mt-5 py-5">
    <div class="card border-0 bg-gradient-primary text-white shadow-lg animate__animated animate__fadeIn">
        <div class="card-body p-5 text-center">
            <h2 class="fw-bold mb-4">Sẵn sàng đặt món?</h2>
            <p class="lead mb-4">Khám phá thực đơn đa dạng của chúng tôi và đặt hàng ngay hôm nay!</p>
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="SanPham" asp-action="Index" class="btn btn-light btn-lg animate__animated animate__pulse animate__infinite animate__slower">
                    <i class="bi bi-cup-hot me-2"></i> Xem thực đơn
                </a>
                <a asp-controller="DatBan" asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-calendar-heart me-2"></i> Đặt bàn
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .text-shadow {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
        
        .feature-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 80px;
            height: 80px;
            border-radius: 50%;
        }
        
        .category-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}
